<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relative"
    tools:context="com.tesu.creditgold.activity.HomePackagingActivity">
    <com.tesu.creditgold.support.PercentRelativeLayout style="@style/tabTitleStyle">
        <TextView
            android:id="@+id/tv_top_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/top_back"
            android:gravity="center_vertical"
            android:textColor="@color/tab_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="电商分期资料"
            android:textColor="@color/tab_background"
            android:textSize="20sp" />
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/tab_background"
        android:layout_height="match_parent">
        <com.tesu.creditgold.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_heightPercent="9%w"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/step_3"/>
            <com.tesu.creditgold.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_button_color"
                    android:text="身份认证"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/default_button_color"
                    android:text="信息认证"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/default_button_color"
                    android:text="分期资料认证"/>
            </com.tesu.creditgold.support.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/LineGrayColor"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/GrayBackground"/>
            <TextView
                android:id="@+id/tv_add_contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="* 所购产品照片"/>
            <com.tesu.creditgold.widget.NoScrollGridView
                android:id="@+id/gv_add_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_widthPercent="80%w"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="12dp"
                android:numColumns="2"
                android:verticalSpacing="12dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="10dp"
                android:background="@color/GrayBackground"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/gray"
                android:text="提示:合同可以选择拍照上传,内容一定要清晰可见"/>
            <TextView
                android:id="@+id/tv_add_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="* 待付款订单截图"/>
            <com.tesu.creditgold.widget.NoScrollGridView
                android:id="@+id/gv_add_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_widthPercent="80%w"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="12dp"
                android:numColumns="2"
                android:verticalSpacing="12dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="10dp"
                android:background="@color/GrayBackground"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="提示:1.内容一定要清晰可见。2.未拿到红本可使用复印件照片。"/>
            <TextView
                android:id="@+id/tv_add_company_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="* 商家店铺主页截图"/>
            <com.tesu.creditgold.widget.NoScrollGridView
                android:id="@+id/gv_add_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_widthPercent="80%w"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="12dp"
                android:numColumns="2"
                android:verticalSpacing="12dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="10dp"
                android:background="@color/GrayBackground"/>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.tesu.creditgold.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 线上平台网址:"/>
                    <EditText
                        android:id="@+id/et_url"
                        android:layout_width="0dp"
                        android:layout_marginLeft="22dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_shape"/>
                </com.tesu.creditgold.support.PercentLinearLayout>
                <com.tesu.creditgold.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 注册登录账户名:"/>
                    <EditText
                        android:id="@+id/et_account"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="textPassword"
                        android:layout_weight="1"
                        android:background="@drawable/border_shape"/>
                </com.tesu.creditgold.support.PercentLinearLayout>
            </com.tesu.creditgold.support.PercentLinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="备注"/>
            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:hint="输入您所需要备注的信息"
                android:textColorHint="@color/hint_text_gray"
                android:layout_marginRight="20dp"
                android:inputType="textMultiLine"
                android:maxLength="@integer/remark_max_length"
                android:background="@drawable/border_shape"
                android:minLines="@integer/remark_lines"
                android:layout_height="wrap_content" />
            <com.tesu.creditgold.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/GrayBackground"
                android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                app:layout_widthPercent="95%w"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/btn_sub"
                android:layout_gravity="center_horizontal"
                android:text="下一步"
                android:textColor="@color/title_text"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />
            </com.tesu.creditgold.support.PercentRelativeLayout>
        </com.tesu.creditgold.support.PercentLinearLayout>
    </ScrollView>
</com.tesu.creditgold.support.PercentLinearLayout>
