<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GrayBackground"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/text_color_black"
        android:text="选择交易类型"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineGrayColor"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_widthPercent="30%w"
            android:textColor="@color/tab_background"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@mipmap/button_yellow_rec"
            android:text="全部"/>
        <TextView
            android:id="@+id/tv_credit_amount"
            android:layout_toRightOf="@+id/tv_all"
            android:layout_marginLeft="@dimen/activity_common_left_magging"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_widthPercent="30%w"
            android:textColor="@color/TextGrayColor"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@mipmap/button_white_rec"
            android:text="授信金额"/>
        <TextView
            android:id="@+id/tv_transaction_expenditure"
            android:layout_toRightOf="@+id/tv_credit_amount"
            android:layout_marginLeft="@dimen/activity_common_left_magging"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_widthPercent="30%w"
            android:textColor="@color/TextGrayColor"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@mipmap/button_white_rec"
            android:text="交易支出"/>
        <TextView
            android:id="@+id/tv_repayment_amount"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_widthPercent="30%w"
            android:textColor="@color/TextGrayColor"
            android:gravity="center"
            android:textSize="17sp"
            android:background="@mipmap/button_white_rec"
            android:text="还款金额"/>
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="10dp"
        android:background="@color/LineGrayColor"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/text_color_black"
        android:gravity="center"
        android:textSize="17sp"
        android:background="@color/tab_background"
        android:text="取消"/>
</com.tesu.creditgold.support.PercentLinearLayout>