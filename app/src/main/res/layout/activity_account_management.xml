<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/GrayBackground"
    android:orientation="vertical">

    <RelativeLayout style="@style/tabTitleStyle">
        <TextView
            android:id="@+id/tv_top_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/top_back"
            android:gravity="center_vertical"
            android:textColor="@color/tab_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="账户管理"
            android:textColor="@color/tab_background"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/LineGrayColor"/>

    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:background="@color/tab_background"
      >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%w"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="真实姓名"
             />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_name"
            app:layout_widthPercent="70%w"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请填写持卡人姓名"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="14sp" />
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="20dp"
        android:src="@color/LineGrayColor"
        android:background="@color/tab_background"
        />
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:background="@color/tab_background"
        >

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%w"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="银行卡号"
            />

        <EditText
            android:id="@+id/et_bank_card"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_photo"
            app:layout_widthPercent="70%w"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:maxLength="19"
            android:background="@null"
            android:hint="请填写银行卡号"
            android:textColor="@color/text_color_black"
            android:singleLine="true"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="14sp" />
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="20dp"
        android:src="@color/LineGrayColor"
        android:background="@color/tab_background"
        />
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:background="@color/tab_background"
        >

        <TextView
            android:id="@+id/tv_bank_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%w"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="银行名称"
            />

        <EditText
            android:gravity="center_vertical"
            android:id="@+id/et_bank_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_bank_title"
            app:layout_widthPercent="70%w"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="请填写银行名称"
            android:layout_centerVertical="true"
            android:background="@null"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="14sp" />
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="20dp"
        android:src="@color/LineGrayColor"
        android:background="@color/tab_background"
        />
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:background="@color/tab_background"
        >

        <TextView
            android:id="@+id/tv_branch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="20%w"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="开户支行"
            />

        <EditText
            android:id="@+id/et_branch"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_branch"
            app:layout_widthPercent="70%w"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请填写开户支行"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_text_gray"
            android:textSize="14sp" />
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineGrayColor"/>
    <TextView
        android:id="@+id/tv_hint"
        android:visibility="invisible"
        android:textColor="@color/text_color_gray"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支行名称填写不正确提现打款将会被银行退回，请查询后填写!"
        />

    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            app:layout_widthPercent="90%w"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/btn_sub"
            android:text="修改"
            android:textColor="@color/title_text"
            android:textSize="20sp" />

    </com.tesu.creditgold.support.PercentRelativeLayout>


</com.tesu.creditgold.support.PercentLinearLayout>