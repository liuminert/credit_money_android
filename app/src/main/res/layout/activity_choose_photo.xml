<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background">

    <RelativeLayout style="@style/tabTitleStyle"
        android:id="@+id/rl_title">
        <TextView
            android:id="@+id/tv_top_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/top_back"
            android:gravity="center_vertical"
            android:textColor="@color/tab_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="本地图片"
            android:textColor="@color/tab_background"
            android:textSize="17sp" />
    </RelativeLayout>
    <GridView
        android:padding="10dp"
        android:id="@+id/phote_gv"
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="60%h"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:verticalSpacing="5dp"/>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/phote_gv"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/LineGrayColor"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/line1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="最多可选9张图片"/>
        <TextView
            android:id="@+id/start_make_tv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_widthPercent="40%w"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/btn_sub"
            android:textColor="@color/tab_background"
            android:gravity="center"
            android:text="完成"/>
        <View
            android:id="@+id/line"
            android:layout_below="@+id/start_make_tv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LineGrayColor"/>
        <GridView
            android:layout_marginTop="10dp"
            android:id="@+id/selected_phote_gv"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="60%h"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:numColumns="4"

            />
    </com.tesu.creditgold.support.PercentRelativeLayout>
</com.tesu.creditgold.support.PercentRelativeLayout>