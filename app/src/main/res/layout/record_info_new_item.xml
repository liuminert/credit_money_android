<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical">

    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_periods"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_periods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="@color/text_color_black"
            android:text="第三期"/>
        <ImageView
            android:id="@+id/iv_repayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_periods"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/repay_right"/>
        <ImageView
            android:id="@+id/iv_periods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_down"/>
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineGrayColor" />
    <com.tesu.creditgold.support.PercentLinearLayout
        android:id="@+id/ll_repayment_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_repay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:text="本期应还金额"/>
        <com.tesu.creditgold.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:text="￥"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:textSize="40sp"
                android:text="1000.00"/>
        </com.tesu.creditgold.support.PercentLinearLayout>
        <TextView
            android:id="@+id/tv_is_repay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color_gray"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="待还款"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:background="@color/LineGrayColor" />
        <com.tesu.creditgold.support.PercentRelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="@color/text_color_gray"
                android:text="逾期费用"/>
            <TextView
                android:id="@+id/tv_overdue_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text=""/>
        </com.tesu.creditgold.support.PercentRelativeLayout>
        <com.tesu.creditgold.support.PercentRelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_repay_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_gray"
                android:textSize="17sp"
                android:text="应还日期"/>
            <TextView
                android:id="@+id/tv_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text=""/>
        </com.tesu.creditgold.support.PercentRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LineGrayColor" />
        <com.tesu.creditgold.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_prepayment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_prepayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/default_button_color"
                android:textSize="17sp"
                android:text="立即还款"/>
            <TextView
                android:id="@+id/tv_already_applied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:text="已申请"
                android:textColor="@color/text_color_gray"/>
            <ImageView
                android:id="@+id/iv_prepayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_arrow"/>
        </com.tesu.creditgold.support.PercentRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LineGrayColor"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/GrayBackground" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LineGrayColor"/>
    </com.tesu.creditgold.support.PercentLinearLayout>
</com.tesu.creditgold.support.PercentLinearLayout>