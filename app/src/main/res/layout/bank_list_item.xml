<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_shape"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/iv_bank"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/icbc"/>
    <TextView
        android:layout_toRightOf="@+id/iv_bank"
        android:id="@+id/tv_bank_name"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:text="银行"
        />
    <TextView
        android:layout_toRightOf="@+id/iv_bank"
        android:id="@+id/tv_bank_card"
        android:layout_below="@id/tv_bank_name"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color_gray"
        android:layout_height="40dp"
        android:text="卡号"
        />
    <TextView
        android:id="@+id/tv_change"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/login_no"
        android:textColor="@color/default_button_color"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="修改银行卡"/>

</com.tesu.creditgold.support.PercentRelativeLayout>
