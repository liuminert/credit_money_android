<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tesu.creditgold.fragment.FragmentWaiteExamine">

    <!-- TODO: Update blank fragment layout -->
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_record"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:divider="@color/GrayBackground"
        android:dividerHeight="10dp"
        />
    <com.tesu.creditgold.support.PercentLinearLayout
        android:id="@+id/ll_no_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color_black"
            android:text="暂时还没有可查询的订单"/>
    </com.tesu.creditgold.support.PercentLinearLayout>

</RelativeLayout>
