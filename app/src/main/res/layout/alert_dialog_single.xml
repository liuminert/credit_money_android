<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@android:color/transparent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:background="@drawable/alert_dialog_shape"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/text_color_black"
            android:textSize="17sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/alert_dialog_content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您好，请设置摇一摇主标题！"
            android:textColor="@color/text_color_gray"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/LineGrayColor"
            android:text="_"
            android:layout_marginTop="20dp"
            android:textColor="@color/LineGrayColor" />

        <Button
            android:background="@drawable/mybtnbottomselector"
            android:id="@+id/tv_roger"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/default_button_color"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>