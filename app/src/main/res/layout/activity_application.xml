<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GrayBackground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!-- 标题       app:layout_heightPercent="15%h"
            app:layout_marginLeftPercent="2%w"
            app:layout_widthPercent="25%w"-->

    <com.tesu.creditgold.support.PercentRelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="合作申请"
            android:textColor="@color/tab_background"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/tv_top_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/top_back"
            android:gravity="center_vertical"
            android:textColor="@color/tab_background" />
    </com.tesu.creditgold.support.PercentRelativeLayout>

    <ScrollView
        android:id="@+id/sv_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_head"
        android:background="@color/GrayBackground">

        <com.tesu.creditgold.support.PercentRelativeLayout
            android:id="@+id/rl_total"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tesu.creditgold.support.PercentLinearLayout
                android:id="@+id/ll_commit"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/LineGrayColor"/>

                <com.tesu.creditgold.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_background"
                    android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="门店名称" />

                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_store_name"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:hint="输入店铺名称"
                    android:background="@color/white" />
                </com.tesu.creditgold.support.PercentLinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingLeft="20dp"
                    android:src="@color/LineGrayColor"
                    android:background="@color/tab_background"/>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_background"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="    联系人" />

                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_contract_name"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:hint="输入联系人姓名"
                    android:background="@color/white" />
            </com.tesu.creditgold.support.PercentLinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingLeft="20dp"
                    android:src="@color/LineGrayColor"
                    android:background="@color/tab_background"/>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_background"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="联系电话" />

                <EditText
                    android:textSize="14sp"
                    android:id="@+id/et_contract_telphone"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="输入您的联系电话"
                    android:background="@color/white"
                    android:inputType="number"
                    android:maxLength="11" />
            </com.tesu.creditgold.support.PercentLinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingLeft="20dp"
                    android:src="@color/LineGrayColor"
                    android:background="@color/tab_background"/>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_background"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="门店分类" />

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/tv_shop_type"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/text_color_gray"
                    android:drawableRight="@mipmap/right_arrow"
                    android:gravity="center_vertical"
                    android:text="选择合作门店类型" />
            </com.tesu.creditgold.support.PercentLinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingLeft="20dp"
                    android:src="@color/LineGrayColor"
                    android:background="@color/tab_background"/>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_background"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="门店地址" />

                <TextView
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:id="@+id/tv_area"
                    android:layout_width="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_color_gray"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/right_arrow"
                    android:gravity="center_vertical"
                    android:text="选择 省 市 区" />
            </com.tesu.creditgold.support.PercentLinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/LineGrayColor"
                    android:paddingLeft="90dp"
                    android:background="@color/tab_background"/>

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="90dp"
                    android:background="@color/tab_background"
                    android:hint="详细至门牌号，请与执照地址一致"
                    android:textSize="14sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/tab_background"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LineGrayColor"/>

                <com.tesu.creditgold.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/tab_background"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/tab_background"
                        android:gravity="center_vertical"
                        android:text="门脸照" />
                    <ImageView
                        android:id="@+id/iv_shop_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        app:layout_widthPercent="36%w"
                        app:layout_heightPercent="27%w"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/upload"/>
                </com.tesu.creditgold.support.PercentLinearLayout>


            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/tab_background"
                android:orientation="vertical">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:background="@color/tab_background"
                    android:layout_height="30dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="营业执照" />
                <ImageView
                    android:id="@+id/iv_business_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_widthPercent="36%w"
                    app:layout_heightPercent="27%w"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/upload"/>
            </com.tesu.creditgold.support.PercentLinearLayout>

            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/tab_background"
                android:orientation="vertical">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="营业场所照" />

                <ImageView
                    android:id="@+id/iv_business_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="36%w"
                    app:layout_heightPercent="27%w"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/upload"/>
            </com.tesu.creditgold.support.PercentLinearLayout>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/tab_background"
                android:orientation="vertical">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="法人身份证" />
                <com.tesu.creditgold.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_ic_card_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="40%w"
                        app:layout_heightPercent="30%w"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/upload"/>
                    <ImageView
                        android:id="@+id/iv_ic_card_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="40%w"
                        android:scaleType="fitXY"
                        app:layout_heightPercent="30%w"
                        android:src="@mipmap/upload"/>
                </com.tesu.creditgold.support.PercentLinearLayout>
            </com.tesu.creditgold.support.PercentLinearLayout>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:background="@color/tab_background"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="38%w"
                    android:layout_marginBottom="10dp"
                    android:text="正面"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    app:layout_widthPercent="38%w"
                    android:layout_marginBottom="10dp"
                    android:text="反面"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color_gray"
                    />
            </com.tesu.creditgold.support.PercentLinearLayout>
            <com.tesu.creditgold.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/tab_background"
                android:orientation="vertical">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="店铺介绍" />

                <EditText
                    android:textSize="12sp"
                    android:id="@+id/et_description"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border_shape"
                    android:textColor="@color/TextDarkGrayColor"
                    android:layout_marginBottom="10dp"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" />

            </com.tesu.creditgold.support.PercentLinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ch"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/tv_contract1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="我已阅读并同意"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_contract"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/tv_contract1"
                            android:gravity="center"
                            android:text="商家合作协议"
                            android:textColor="@color/default_button_color"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_ceng_ruo"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/tv_contract"
                            android:gravity="center"
                            android:text="《商家承诺书》"
                            android:textColor="@color/defaultBlueColor"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/ch"
                        android:layout_width="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/checkb_select"
                        android:button="@null"
                        android:checked="false" />
                </RelativeLayout>
                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/btn_sub_n"
                    android:textSize="20sp"
                    android:text="提交"
                    android:textColor="@color/text_color_gray" />
            </com.tesu.creditgold.support.PercentLinearLayout>

            <RelativeLayout
                android:id="@+id/rl_commit_success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/success" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/default_button_color"
                    android:layout_marginTop="30dp"
                    android:text="提交成功"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/TextGrayColor"
                    android:layout_marginTop="20dp"
                    android:text="资料提交成功,审核中,请耐心等待......" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_alignLeft="@+id/tv1"
                    android:textColor="@color/TextGrayColor"
                    android:layout_marginTop="5dp"
                    android:text="客服电话:400-6626-985" />
                <Button
                    android:layout_below="@+id/tv2"
                    android:id="@+id/btn_return"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/btn_sub"
                    android:text="返回主页"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </com.tesu.creditgold.support.PercentRelativeLayout>


    </ScrollView>

</com.tesu.creditgold.support.PercentRelativeLayout>