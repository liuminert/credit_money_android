<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tab_background">
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:id="@+id/rl_head"
        style="@style/tabTitleStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="资料填写"
            android:textColor="@color/tab_background"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/tv_top_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/top_back"
            android:gravity="center_vertical"
            android:textColor="@color/tab_background" />
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/GrayBackground"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_height="@dimen/activity_common_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%w"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/activity_common_text_size"
            android:layout_centerVertical="true"
            android:text="交易订单号"/>
        <EditText
            android:id="@+id/et_order_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="65%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/activity_common_text_size"
            android:textColorHint="@color/hint_text_gray"
            android:background="@color/white"
            android:hint="可与卖家进行确认"/>
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:background="@color/LineGrayColor"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_height="@dimen/activity_common_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_total_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%w"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/activity_common_text_size"
            android:layout_centerVertical="true"
            android:text="交易金额"/>
        <TextView
            android:id="@+id/et_total_balance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="65%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/activity_common_text_size"
            android:textColorHint="@color/hint_text_gray"
            android:background="@color/white"/>
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:background="@color/LineGrayColor"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_height="@dimen/activity_common_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_periods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%w"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/activity_common_text_size"
            android:layout_centerVertical="true"
            android:text="期数"/>
        <TextView
            android:id="@+id/tv_periods"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="65%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/activity_common_text_size"
            android:textColorHint="@color/hint_text_gray"
            android:background="@color/white"/>
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:background="@color/LineGrayColor"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_common_left_magging"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:layout_height="@dimen/activity_common_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%w"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/activity_common_text_size"
            android:layout_centerVertical="true"
            android:text="每期应还"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="65%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/activity_common_text_size"
            android:textColorHint="@color/hint_text_gray"
            android:background="@color/white"/>
    </com.tesu.creditgold.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineGrayColor"/>
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:background="@color/GrayBackground"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_notice"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_common_left_magging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_light_yellow"
            android:text="提示:每期具体还款日以订单生效时间为准"/>
        <Button
            android:layout_below="@+id/tv_notice"
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/btn_gray"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_widthPercent="95%w" />
        <TextView
            android:gravity="center"
            app:layout_marginTopPercent="2%h"
            android:layout_toRightOf="@+id/is_checked"
            android:textSize="16sp"
            android:layout_below="@id/btn_submit"
            android:id="@+id/tv_contract_xieyi"
            android:textColor="@color/text_color_gray"
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_contract_xieyi"
            app:layout_marginTopPercent="2%h"
            android:layout_centerHorizontal="true"
            android:textColor="@color/default_button_color"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/btn_submit"
            android:id="@+id/tv_contract"
            android:text="《借款协议》"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_contract"
            app:layout_marginTopPercent="2%h"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/btn_submit"
            android:id="@+id/tv_contract1"
            android:text="及"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_contract1"
            app:layout_marginTopPercent="2%h"
            android:layout_centerHorizontal="true"
            android:textColor="@color/default_button_color"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/btn_submit"
            android:id="@+id/tv_contract2"
            android:text="《个人信"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:gravity="center"
            android:textColor="@color/default_button_color"
            android:textSize="16sp"
            android:layout_below="@id/tv_contract_xieyi"
            android:layout_alignLeft="@+id/tv_contract_xieyi"
            android:id="@+id/tv_contract3"
            android:text="息使用授权书》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            app:layout_marginTopPercent="3%w"
            android:layout_marginRight="5dp"
            android:layout_below="@id/btn_submit"
            android:background="@drawable/checkb_select"
            android:id="@+id/is_checked"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:button="@null"
            />
    </com.tesu.creditgold.support.PercentRelativeLayout>
</com.tesu.creditgold.support.PercentLinearLayout>
