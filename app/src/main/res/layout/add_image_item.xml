<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<com.tesu.manicurehouse.widget.RatioLayout xmlns:soda="http://schemas.android.com/apk/res/com.tesu.manicurehouse"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--soda:ratio="1.33"-->
        <!--soda:relative="width"-->
        <!-->-->
    <com.tesu.creditgold.support.PercentRelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/upload"
            android:id="@+id/iv_comment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%w"
            app:layout_heightPercent="75%w"
            />

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/upload"
            android:id="@+id/iv_image"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%w"
            app:layout_heightPercent="75%w"
            />
    </com.tesu.creditgold.support.PercentRelativeLayout>

    <!--</com.tesu.manicurehouse.widget.RatioLayout>-->

</com.tesu.creditgold.support.PercentRelativeLayout>