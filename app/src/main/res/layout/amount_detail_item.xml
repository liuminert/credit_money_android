<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
    	android:singleLine="true"
    	android:textSize="17sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_freeze_mode"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@+id/tv_type"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/tab_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/text_color_yellow"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_type"
        android:textColor="@color/TextGrayColor"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="10dp"
    	android:layout_height="wrap_content"
    	android:singleLine="true"
    	android:textSize="17sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_common_right_magging"
        android:textSize="17sp"
        android:layout_centerVertical="true"/>

</com.tesu.creditgold.support.PercentRelativeLayout>
