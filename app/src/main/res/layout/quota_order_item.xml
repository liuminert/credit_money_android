<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_background"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="@color/tab_text_normal"
        android:id="@+id/tv_order_id"
        android:text="订单号:165465464646464"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />
    <ImageView
        android:id="@+id/line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/line"/>
    <TextView
        android:layout_below="@+id/line"
        android:layout_marginLeft="20dp"
        android:textColor="@color/TextDarkGrayColor"
        android:id="@+id/tv_product_name"
        android:gravity="center"
        android:textSize="17sp"
        android:text="品名:东非酸枝"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />
    <TextView
        android:layout_below="@+id/tv_product_name"
        android:layout_marginLeft="20dp"
        android:textColor="@color/TextDarkGrayColor"
        android:text="订单金额:223元"
        android:textSize="17sp"
        android:gravity="center"
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />
    <TextView
        android:layout_below="@+id/tv_money"
        android:layout_marginLeft="20dp"
        android:textColor="@color/TextDarkGrayColor"
        android:text="2016-11-17 20:30:19"
        android:textSize="17sp"
        android:gravity="center"
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/tv_order_state"
        android:layout_width="90dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp"
        android:textSize="17sp"
        android:background="@mipmap/notcompleted"
        android:textColor="@color/text_color_yellow"
        android:gravity="center"
        android:layout_alignTop="@+id/tv_create_time"
        android:layout_alignParentRight="true"
        android:text="未成交"/>

</com.tesu.creditgold.support.PercentRelativeLayout>