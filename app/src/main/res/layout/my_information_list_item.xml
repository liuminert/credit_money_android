<?xml version="1.0" encoding="utf-8"?>
<com.tesu.creditgold.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <com.tesu.creditgold.support.PercentRelativeLayout
       android:layout_margin="10dp"
       android:id="@+id/rl_information"
       android:layout_width="25dp"
       android:layout_height="25dp">
       <ImageView
           android:id="@+id/iv_information"
           android:src="@mipmap/icon_message"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
       <ImageView
           android:id="@+id/iv_unread"
           android:src="@mipmap/message_red"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </com.tesu.creditgold.support.PercentRelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_information_title"
        android:layout_toRightOf="@+id/rl_information"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:layout_height="30dp"
        android:text=""/>
    <TextView
        android:id="@+id/tv_send_time"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="15sp"
        android:textColor="@color/text_color_gray"
        android:gravity="center_vertical"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_information_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/tv_information_title"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_gray"
        android:layout_below="@+id/tv_information_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(点击查看详情)"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_alignLeft="@+id/tv_information_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_color_gray"
        android:paddingBottom="10dp"
        android:layout_below="@+id/tv_information_content"/>

</com.tesu.creditgold.support.PercentRelativeLayout>
