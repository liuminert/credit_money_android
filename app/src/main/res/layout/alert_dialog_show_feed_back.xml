<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:background="@android:color/transparent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:background="@drawable/alert_dialog_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提交成功"
            android:textColor="@color/text_color_black"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/LineGrayColor"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/alert_dialog_content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您的建议已提交，我们会及时跟进处理，"
            android:textColor="@color/TextDarkGrayColor"
            android:textSize="15sp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="谢谢!"
            android:textColor="@color/TextDarkGrayColor"
            android:textSize="17sp" />


        <Button
            android:background="@mipmap/btn_sub"
            android:id="@+id/tv_roger"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="确认"
            android:textColor="@color/tab_background"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>